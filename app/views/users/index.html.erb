<h4>Find a new Email Address</h4>
<%= form_with(model: User.new) do |f| %>
  <p class="orange-text">Use sparingly, API limit will be finished soon!</p>
  <div class="row">
    <div class="input-field col s3">
      <label for="user_first_name">First Name</label>
      <%= f.text_field :first_name, required: true %>
    </div>
    <div class="input-field col s3">
      <%= f.text_field :last_name, required: true %>
      <label for="user_last_name">Last Name</label>
    </div>
    <div class="input-field col s3">
      <%= f.text_field :domain, required: true %>
      <label for="user_domain">Domain</label>
    </div>
    <div class="input-field col s3">
      <button type="submit" class="waves-effect waves-light btn"><i class="material-icons right">person_search</i> Check for Email</button>
    </div>
  </div>
<% end %>

<% if @users.length.positive? %>
  <h4>Users</h4>
  <%= render 'users_table', users: @users %>
<% end %>
